@{
    ViewData["Title"] = "Load Cheese File";
}

<h2>Load Cheeses</h2>

<div class="form-horizontal">
    <hr />
@if (ViewBag.result != null)
{
    <p class="@ViewBag.resultCssClass">@ViewBag.result 
        @if (ViewBag.showLink)
        {
            @Html.ActionLink("Back To Cheese List", "Index", "Cheese")
        }
    </p>
}

@using (Html.BeginForm("Load", "LoadFile", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <span class="text-warning">File must be in the format of name_ddMMyyyy.xml</span>
    <div class="form-group">        
        <label class="col-md-2 control-label">File</label>
        <div class="col-md-10">
            @Html.TextBox("file", "", new {type = "file", required="required"})
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Load" class="btn btn-default"/>
        </div>
    </div>
}
</div>


<div>
    @Html.ActionLink("Back To Cheese List", "Index", "Cheese")
</div>